<%= content_tag :h1, t('.listing_posts') %>

<table>
  <thead>
    <tr>
      <th><%= t('.author') %></th>
      <th><%= t('.content') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.email if post.user %></td>
        <td><%= link_to post.content, post  %></td>
        <td><%= link_to t('.edit'), edit_post_path(post) %></td>
        <td><%= link_to t('.destroy'), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_post'), new_post_path %>

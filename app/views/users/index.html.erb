<h1><%= t('.users_list') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.email') %></th>
      <th><%= t('.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= link_to t('.edit'), edit_user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.back'), posts_path %>
